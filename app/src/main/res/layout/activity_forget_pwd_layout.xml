<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="找回登录密码"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textColor="@color/title_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="@drawable/edt_bg"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_dec"
        android:textColor="@color/title_color"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        />
        <com.zst.ynh.view.ClearEditText
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/lr_margin"
            android:layout_marginRight="@dimen/lr_margin"
            android:layout_marginTop="15dp"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_num"
            android:textColorHint="@color/hint_color"
            android:hint="请输入真实姓名"
            android:maxLength="15"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:background="@drawable/edt_bg"
            android:padding="10dp"
            android:textColor="@color/title_color"
            android:textSize="16dp" />

        <com.zst.ynh.view.ClearEditText
            android:id="@+id/et_id_num"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/et_real_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/lr_margin"
            android:layout_marginRight="@dimen/lr_margin"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/hint_color"
            app:layout_constraintTop_toBottomOf="@+id/et_real_name"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:background="@drawable/edt_bg"
            android:textColor="@color/title_color"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/et_verification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColorHint="@color/hint_color"
            android:hint="请输入验证码"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/lr_margin"
            android:layout_marginRight="@dimen/lr_margin"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edt_cursor"
            app:layout_constraintTop_toBottomOf="@+id/et_id_num"
            android:background="@drawable/edt_bg"
            android:inputType="number"
            android:textColor="@color/title_color"
            android:textSize="16dp"
            android:maxLength="6"
            />

        <Button
            android:id="@+id/btn_verification"
            android:layout_height="@dimen/btn_verification_code_height"
            android:layout_width="wrap_content"
            android:text="获取"
            android:layout_marginRight="@dimen/lr_margin"
            app:layout_constraintTop_toBottomOf="@+id/et_id_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_verification"
            app:layout_constraintBottom_toBottomOf="@+id/et_verification"
            android:background="@drawable/shape_get_verify_code"
            android:textColor="@color/theme_color"
            android:textSize="14dp"
             />
    <Button
        android:id="@+id/btn_submit"
        android:layout_height="@dimen/btn_common_height"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        app:layout_constraintTop_toBottomOf="@+id/et_verification"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/btn_common"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
</android.support.constraint.ConstraintLayout>