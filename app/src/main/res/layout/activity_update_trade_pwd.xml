<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="修改交易密码"
        android:textColor="@color/title_color"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dec"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="请输入您旧交易密码"
        android:textColor="@color/aid_color"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tv_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_setpwd"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ed_pwd_key1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />

            <TextView
                android:id="@+id/ed_pwd_key2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />

            <TextView
                android:id="@+id/ed_pwd_key3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />

            <TextView
                android:id="@+id/ed_pwd_key4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />

            <TextView
                android:id="@+id/ed_pwd_key5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />

            <TextView
                android:id="@+id/ed_pwd_key6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />


        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="忘记密码?"
        android:textColor="@color/theme_color" />
    <!-- 自定义键盘视图 -->

    <include
        android:id="@+id/llCustomerKb"
        layout="@layout/global_input_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>