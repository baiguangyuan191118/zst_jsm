<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        android:background="@drawable/btn_common"
        android:gravity="center"
        android:text="开始认证"
        android:textColor="@color/white"
        android:textSize="19sp" />
    <ImageView
        android:id="@+id/iv_guide_bg"
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_certification"
        />
</android.support.constraint.ConstraintLayout>