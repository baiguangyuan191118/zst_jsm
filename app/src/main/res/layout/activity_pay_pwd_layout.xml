<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="设置交易密码"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/title_color"
        android:textSize="27sp" />
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dec"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_dec"
        android:text="请设置六位交易密码"
        android:textColor="@color/aid_color"
        android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_keyboard"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_setpwd"
            android:focusable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pwd_key1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />
            <TextView
                android:id="@+id/tv_pwd_key2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />
            <TextView
                android:id="@+id/tv_pwd_key3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />
            <TextView
                android:id="@+id/tv_pwd_key4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />
            <TextView
                android:id="@+id/tv_pwd_key5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividing_color" />
            <TextView
                android:id="@+id/tv_pwd_key6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>
    <include
        android:id="@+id/llCustomerKb"
        layout="@layout/global_input_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout>