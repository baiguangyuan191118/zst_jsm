<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:text="直系亲属联系人"
        android:textColor="@color/aid_color"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/rl_emergency_relation"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="与本人关系"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_relation"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/enter" />

        <TextView
            android:id="@+id/tv_emergency_relation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_relation"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:textColor="@color/title_color"
            android:textColorHint="@color/hint_color" />
    </RelativeLayout>

    <View
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_emergency_relation"
        android:background="@color/dividing_color"/>

    <RelativeLayout
        android:id="@+id/rl_emergency_contact"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/rl1"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="紧急联系人"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_get_contact"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/enter" />

        <TextView
            android:id="@+id/tv_emergency_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_get_contact"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:maxLength="20"
            android:textColor="@color/title_color"
            android:textColorHint="@color/hint_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:text="常用联系人"
        app:layout_constraintTop_toBottomOf="@+id/rl_emergency_contact"
        android:gravity="center_vertical"
        android:textColor="@color/aid_color"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/rl_usual_relation"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="与本人关系"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_relation2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/enter" />

        <TextView
            android:id="@+id/tv_usual_relation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_relation2"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:textColor="@color/title_color"
            android:textColorHint="@color/hint_color" />
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_usual_relation"
        android:background="@color/dividing_color"/>

    <RelativeLayout
        android:id="@+id/rl_usual_contact"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_get_contact2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/enter" />

        <TextView
            android:id="@+id/tv_usual_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_get_contact2"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:maxLength="20"
            android:textColor="@color/title_color"
            android:textColorHint="@color/hint_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_usual_contact"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_common_height"
            android:layout_marginLeft="@dimen/lr_margin"
            android:layout_marginRight="@dimen/lr_margin"
            android:background="@drawable/btn_common"
            android:gravity="center"
            android:enabled="false"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/shield"
            android:drawablePadding="5dp"
            android:text="您的个人信息会被妥善保管"
            android:textColor="@color/theme_color"
            android:textSize="12dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>