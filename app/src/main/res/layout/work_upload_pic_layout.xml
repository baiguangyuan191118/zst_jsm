<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="6dp"
        android:text="@string/work_upload_pic"
        android:textColor="#000000"
        android:textSize="14sp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pic_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip"/>
    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        app:layout_constraintTop_toBottomOf="@+id/pic_recycle_view"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_common"
        android:text="上传"
        android:textColor="@color/white" />
</android.support.constraint.ConstraintLayout>