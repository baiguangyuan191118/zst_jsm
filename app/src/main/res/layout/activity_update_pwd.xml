<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="修改登录密码"
        android:textColor="@color/title_color"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dec"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/text_color"
        android:textSize="16sp" />


    <com.zst.ynh.view.ClearEditText
        android:id="@+id/et_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_user_phone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:hint="请输入旧密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/edt_cursor"
        android:background="@drawable/edt_bg"/>

    <com.zst.ynh.view.ClearEditText
        android:id="@+id/et_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/et_old_pwd"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColor="@color/title_color"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/edt_cursor"
        android:background="@drawable/edt_bg"/>

    <com.zst.ynh.view.ClearEditText
        android:id="@+id/et_new_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/et_new_pwd"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/edt_cursor"
        android:background="@drawable/edt_bg"/>

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_pwd_again"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|left"
        android:text="*新密码需由6~16位字母和数字组成"
        android:textColor="@color/aid_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_below="@id/tv_prompt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_common"
        android:gravity="center"
        android:text="完  成"
        android:enabled="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_complete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="忘记密码?"
        android:textColor="@color/theme_color" />
</RelativeLayout>
