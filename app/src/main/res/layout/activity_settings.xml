<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical">

    <!--标题-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_modification_login_password"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/selector_write_item">

            <ImageView
                android:id="@+id/iv_tip_modification_login_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/login_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_tip_modification_login_password"
                android:gravity="center_vertical"
                android:text="修改登录密码"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:src="@mipmap/enter"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/dividing_color"/>

        <RelativeLayout
            android:id="@+id/layout_modification_trade_password"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/selector_write_item">

            <ImageView
                android:id="@+id/iv_tip_modification_trade_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/trade_password"/>

            <TextView
                android:id="@+id/tv_trad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_tip_modification_trade_password"
                android:gravity="center_vertical"
                android:text="修改交易密码"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:src="@mipmap/enter"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/default_bg_color"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/selector_write_item">

            <ImageView
                android:id="@+id/img_gesture_pwd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/gesture_pwd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img_gesture_pwd"
                android:gravity="center_vertical"
                android:text="手势密码"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

            <CheckBox
                android:id="@+id/ck_gesture"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/gesture_bg_selector"
                android:button="@null"
                android:padding="5dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/default_bg_color"/>

        <RelativeLayout
            android:id="@+id/layout_about_my"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_write_item">

            <ImageView
                android:id="@+id/iv_about_my"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/about_my"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_about_my"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/iv_right"
                android:textColor="@color/title_color"/>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:src="@mipmap/enter"/>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/dividing_color"/>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/lr_margin"
        android:layout_marginRight="@dimen/lr_margin"
        android:background="@drawable/btn_common"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_color"/>
</LinearLayout>